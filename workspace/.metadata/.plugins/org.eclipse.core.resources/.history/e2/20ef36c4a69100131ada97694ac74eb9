package view;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.event.ActionListener;

import javax.swing.JPanel;

public class PauseView extends JPanel{

	private static final long serialVersionUID = 4854484671060436688L;
	
	public PauseView(ActionListener actionListener){
		super();
		setSize(800,650);
		setOpaque(true);
		setBackground(new Color(255, 255, 255, 70));
		
	}

	public void paint(Graphics g){
		System.out.println("Painting pause");
		Graphics2D g2 = (Graphics2D)g;
		g2.setColor(Color.green);
		g2.fillRect(250, 225, 300, 200);
		
		
		super.paint(g2);
	}
}
