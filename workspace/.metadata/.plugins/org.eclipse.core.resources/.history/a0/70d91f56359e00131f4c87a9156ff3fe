package move;

import interfaces.MoveInterface;

public abstract class AbstractMove implements MoveInterface {
	
	private String stateActedOn;
	private char action;
	private char playerColour;
	
	public AbstractMove(String state, char action, char playerColour){
		stateActedOn = state;
		this.action = action;
		this.playerColour = playerColour;
	}
	
	@Override
	public String getStateActedOn() {
		return stateActedOn;
	}

	@Override
	public abstract String getStatePostAction();

	@Override
	public char getAction() {
		return action;
	}

	@Override
	public char getPlayerColour() {
		return playerColour;
	}

	@Override
	public int getPlayerID() {
		if(playerColour == 'R'){
			return 1;
		}else{
			return 2;
		}
	}

}
