package players.MCTS;

import java.util.ArrayList;
import java.util.List;

import model.board.Move;

public class MCTSMoveEnginer {
	
	public List<Move> getAvailableMoves(char action, String state, char token) {
		ArrayList<Move> moves = new ArrayList<Move>();
		setState(state);
		
		switch (action) {
		case 'P': 
			moves = getAllPlacements(token);
			break;
		case 'M':
			moves = getAllMovements()
			break;
		case 'R':
			
			break;

		default:
			break;
		}
		
		return moves;
	}


	private ArrayList<Move> getAllPlacements(char token) {
		
		ArrayList<Move> moves = new ArrayList<Move>();
		char[] stateArray = state.toCharArray();
		
		int i = 0;
		for (char c : stateArray) {
			if(c == 'N'){
				Move m = new Move(state, 'P', token);
				m.setPlacement(i);
				moves.add(m);
			}
		}
		
		return moves;
	}

}
