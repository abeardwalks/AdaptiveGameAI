package interfaces;

/**
 * The interface for moves. 
 * 
 * @author Andrew White - 200939787, BSc software Engineering
 *
 */
public interface MoveInterface {

	/**
	 * @return - the state this move is to be executed on. 
	 */
	String getStateActedOn();
	
	/**
	 * @return - the state this move produces.
	 */
	String getStatePostAction();
	
	/**
	 * @return - The action this move executes: P - Placement
	 * 											R - Remove
	 * 											M - Movement
	 */	
	char getAction();
	
	/**
	 * @return - the token colour of the player performing the move.
	 */
	char getPlayerColour();
	
	/**
	 * @return - the ID of the player performing the move
	 */
	int getPlayerID();
	
}
